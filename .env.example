# ====================
# Docker Monitoring Stack
# Environment Variables
# ====================

# Application Configuration
NODE_ENV=production
SITE_TITLE="Docker Monitoring Stack"
DOMAIN=localhost
ACME_EMAIL=admin@example.com

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_REPLICAS=2

# Backend Configuration
BACKEND_REPLICAS=2
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=change-this-in-production-with-secure-random-string

# Database Configuration
POSTGRES_DB=appdb
POSTGRES_USER=appuser
POSTGRES_PASSWORD=change-this-in-production
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=change-this-in-production
REDIS_PORT=6379

# Monitoring Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d
GRAFANA_PORT=3000
GRAFANA_PASSWORD=change-this-in-production
NODE_EXPORTER_PORT=9100
CADVISOR_PORT=8080
ALERTMANAGER_PORT=9093
LOKI_PORT=3100
TRAEFIK_API_PORT=8080

# SMTP Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=alerts@example.com

# External Monitoring (optional)
REMOTE_WRITE_URL=
REMOTE_WRITE_USER=
REMOTE_WRITE_PASSWORD=
REMOTE_READ_URL=

# Volume Paths
PGDATA=./data/postgres
REDIS_DATA=./data/redis
PROMETHEUS_DATA=./data/prometheus
GRAFANA_DATA=./data/grafana

# Network Configuration
APP_NET_SUBNET=172.20.0.0/16
MONITORING_NET_SUBNET=172.21.0.0/16

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
IMAGE_TAG=latest

# Security
ENABLE_HTTPS=false
LETSENCRYPT_EMAIL=
